{
  "name": "Bollinger Bands Breakout",
  "description": "Bollinger Bands breakout strategy. Buy when price crosses above upper band, sell when crosses below lower band.",
  "market": {
    "exchange": "binance",
    "symbol": "BTCUSDT",
    "timeframe": "1h"
  },
  "capital": {
    "initial": 10000,
    "positionSizePercent": 20
  },
  "risk": {
    "stopLossPercent": 2.5,
    "takeProfitPercent": 6.0,
    "maxDailyLossPercent": 8.0,
    "maxOpenPositions": 1
  },
  "indicators": [
    {
      "name": "bollinger",
      "period": 20,
      "params": {
        "std_dev": 2.0
      }
    }
  ],
  "entryConditions": {
    "logic": "AND",
    "rules": [
      {
        "indicator": "close",
        "operator": ">",
        "value": 0,
        "compareWith": "bb_upper"
      }
    ]
  },
  "exitConditions": {
    "logic": "OR",
    "rules": [
      {
        "indicator": "close",
        "operator": "<",
        "value": 0,
        "compareWith": "bb_lower"
      }
    ]
  }
}
