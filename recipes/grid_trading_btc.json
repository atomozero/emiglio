{
  "name": "Grid Trading BTC/USDT",
  "description": "Grid trading strategy that places multiple buy and sell orders at different price levels to profit from market volatility. Works best in ranging markets.",
  "market": {
    "exchange": "binance",
    "symbol": "BTC/USDT",
    "timeframe": "15m"
  },
  "capital": {
    "initial": 10000,
    "positionSizePercent": 5
  },
  "risk": {
    "stopLossPercent": 5.0,
    "takeProfitPercent": 3.0,
    "maxDailyLossPercent": 10.0,
    "maxOpenPositions": 10
  },
  "indicators": [
    {
      "name": "sma",
      "period": 50,
      "params": {}
    },
    {
      "name": "atr",
      "period": 14,
      "params": {}
    },
    {
      "name": "bollinger",
      "period": 20,
      "params": {
        "std_dev": 2
      }
    }
  ],
  "entryConditions": {
    "logic": "AND",
    "rules": [
      {
        "indicator": "close",
        "operator": ">",
        "value": 0,
        "compareWith": "bb_lower"
      },
      {
        "indicator": "close",
        "operator": "<",
        "value": 0,
        "compareWith": "bb_upper"
      }
    ]
  },
  "exitConditions": {
    "logic": "OR",
    "rules": [
      {
        "indicator": "close",
        "operator": ">",
        "value": 0,
        "compareWith": "bb_upper"
      }
    ]
  }
}
