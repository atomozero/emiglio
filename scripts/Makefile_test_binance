# Makefile for test_binance_login

CXX = g++
CXXFLAGS = -std=c++17 -Wall -Wextra -I.. -I../external/rapidjson/include
LDFLAGS = -lssl -lcrypto -lstdc++

OBJS = test_binance_login.o \
       ../src/exchange/BinanceAPI.o \
       ../src/utils/Logger.o \
       ../src/utils/JsonParser.o

TARGET = test_binance_login

all: $(TARGET)

$(TARGET): $(OBJS)
	$(CXX) -o $@ $^ $(LDFLAGS)

test_binance_login.o: test_binance_login.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

../src/exchange/BinanceAPI.o: ../src/exchange/BinanceAPI.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

../src/utils/Logger.o: ../src/utils/Logger.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

../src/utils/JsonParser.o: ../src/utils/JsonParser.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

clean:
	rm -f $(OBJS) $(TARGET)

.PHONY: all clean
